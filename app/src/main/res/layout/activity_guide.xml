<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:padding="10dp"
        android:text="Vad ska gruset anvÃ¤ndas till?"
        />

    <ScrollView
        android:id="@+id/SCROLLER_ID"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:scrollbars="vertical"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">



            <ImageButton
                android:layout_width="240dp"
                android:layout_height="75dp"
                android:id="@+id/avfall_button"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/avfallbutt"
                android:clickable="true"
                android:visibility="visible"
                android:onClick="buttonHandler"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:background="#00000000"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp" />

            <ImageButton
                android:layout_width="240dp"
                android:layout_height="75dp"
                android:id="@+id/platt_button"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/plattbutt"
                android:clickable="true"
                android:visibility="visible"
                android:onClick="buttonHandler"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:background="#00000000"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp" />

            <ImageButton
                android:layout_width="240dp"
                android:layout_height="75dp"
                android:id="@+id/vaeg_button"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/vagbutt"
                android:clickable="true"
                android:visibility="visible"
                android:onClick="buttonHandler"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:background="#00000000"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp" />

            <ImageButton
                android:layout_width="240dp"
                android:layout_height="75dp"
                android:id="@+id/uppfart_button"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/uppfartbutt"
                android:clickable="true"
                android:visibility="visible"
                android:onClick="buttonHandler"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:background="#00000000"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp" />

            <ImageButton
                android:layout_width="240dp"
                android:layout_height="75dp"
                android:id="@+id/tradack_button"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/tradackbutt"
                android:clickable="true"
                android:visibility="visible"
                android:onClick="buttonHandler"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:background="#00000000"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp" />


        </LinearLayout>
    </ScrollView>
</LinearLayout>